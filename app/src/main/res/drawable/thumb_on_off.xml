<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/on_switch_thumb" android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:drawable="@drawable/off_switch_thumb" android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:drawable="@drawable/off_switch_thumb" android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/>
        </layer-list>
    </item>
</selector>
